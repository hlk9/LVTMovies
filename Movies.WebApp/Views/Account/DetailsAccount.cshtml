@model Movies.DAL.Models.User

@{
    ViewData["Title"] = "DetailsAccount";
}



<div class="container">
    <h1 class="my-5 fw-bold text-center">Chi Tiết Tài Khoản</h1>
    <div class="row">
        <div class="col-6">
            <label class="form-label fw-bold">Họ Tên</label>
            <input type="text" class="form-control" asp-for="@Model.FullName" disabled/>
        </div>
        <div class="col-6">
            <label class="form-label fw-bold">Giới Tính</label>
            @if(Model.Gender == true)
            {
                <input type="text" class="form-control" value="Nam" disabled/>
            }
            else
            {
                <input type="text" class="form-control" value="Nữ" disabled />
            }
        </div>
    </div>
    <div class="row my-3">
        <div class="col-6">
            <label class="form-label fw-bold">Email</label>
            <input type="text" class="form-control" asp-for="@Model.Email" disabled />
        </div>
        <div class="col-6">
            <label class="form-label fw-bold">Trạng Thái</label>
            @if (Model.Status == 1)
            {
                <input type="text" class="form-control" value="Hoạt Động" disabled />
            }
            else
            {
                <input type="text" class="form-control" value="Ngừng Hoạt Động" disabled />
            }
        </div>
    </div>

    <div class="row">
        <div class="col-6">
            <label class="form-label fw-bold">Tên Tài Khoản</label>
            <input type="text" class="form-control" asp-for="@Model.UserName" disabled />
        </div>
        <div class="col-6">
            <label class="form-label fw-bold">Mật Khẩu</label>
            <input type="text" class="form-control" asp-for="@Model.Password" disabled />
        </div>
    </div>

    <div class="my-5 d-flex justify-content-center gap-2">
        <a asp-controller="Account" asp-action="ListAccountManager" class="nav-link btn btn-secondary text-white fw-bold">Quay Lại</a>
        <a asp-controller="Account" class="nav-link text-dark btn btn-warning fw-bold">Sửa</a>
    </div>
</div>

