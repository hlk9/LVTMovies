<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Bootstrap CSS -->
    <link href="/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body, html {
            height: 100%;
            margin: 0;
            background-image: url('https://wallpapers.com/images/hd/movie-poster-background-tvke0r6ko2jpix0j.jpg'); /* Thay đổi với đường dẫn của hình ảnh của bạn */
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            font-family: 'Poppins', sans-serif;
        }

        .profile-container {
            
            background: rgba(0, 0, 0, 0.7)  ;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            margin-top: 100px;
            color: #fff;
            max-width: 600px;
            margin: 50px auto; /* Điều chỉnh giữa và đẩy xuống */
        }

        .form-group {
            margin-bottom: 20px;
        }

        /* Làm cho ô input lớn hơn theo chiều dọc */
        .form-control {
            height: 50px; /* hoặc số px bạn muốn */
        }
    </style>
</head>
<body>
    <br />
    <br />
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-md-8 col-lg-6">
                <div class="profile-container">
                    <!-- FullName Input -->
                    <div class="form-group">
                        <label for="fullName">Họ và tên</label>
                        <input type="text" class="form-control" id="fullName" placeholder="Họ và tên" name="fullName" value="Nguyễn Văn A">
                    </div>
                    <!-- Email Input -->
                    <div class="form-group">
                        <label for="email">Địa chỉ Email</label>
                        <input type="email" class="form-control" id="email" placeholder="Địa chỉ Email" name="email" value="example@example.com">
                    </div>
                    <!-- UserName Input -->
                    <div class="form-group">
                        <label for="userName">Tên đăng nhập</label>
                        <input type="text" class="form-control" id="userName" placeholder="Tên đăng nhập" name="userName" value="user123">
                    </div>
                    <!-- Gender Input -->
                    <div class="form-group">
                        <label for="gender">Giới tính</label>
                        <input type="text" class="form-control" id="gender" placeholder="Giới tính" name="gender" value="Nam">
                    </div>
                    <!-- Status Input -->
                    <div class="form-group">
                        <label for="status">Trạng thái</label>
                        <input type="text" class="form-control" id="status" placeholder="Trạng thái" name="status" value="Active">
                    </div>
                    <!-- Submit Button -->
                    <button type="submit" class="btn btn-primary btn-block">Cập nhật</button>
                </div>
            </div>
        </div>
    </div>
    <!-- Bootstrap JS and jQuery -->
    <script src="/js/jquery-3.5.1.slim.min.js"></script>
    <script src="/js/popper.min.js"></script>
    <script src="/js/bootstrap.min.js"></script>
</body>
</html>
