@model Movies.DAL.Models.User

@{
    ViewData["Title"] = "SignUp";

}

<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Bootstrap CSS -->
    <link href="/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body, html {
            height: 100%;
            margin: 0;
            background-image: url('https://wallpapers.com/images/hd/movie-poster-background-tvke0r6ko2jpix0j.jpg'); /* Thay đổi với đường dẫn của hình ảnh của bạn */
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            font-family: 'Poppins', sans-serif;
        }

        .form-container {
            background: rgba(0, 0, 0, 0.7);
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            margin-top: 100px;
            color: #fff;
        }

        .input-group-text svg {
            fill: #fff;
        }

        .form-text a {
            color: #ffc107;
        }

            .form-text a:hover {
                color: #ffeb3b;
            }

        .btn-primary {
            background-color: hsl(57.04deg 97.38% 44.9%);
            border-color: hsl(57.04deg 97.38% 44.9%);
        }

       
        .form-group {
            width: 100%;
            margin-bottom: 20px;
        }

        /
        .btn-block {
            display: block;
            width: 50%; 
            margin: 0 auto;
        }

       
        .form-control {
            height: 50px; 
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-md-8 col-lg-6">
                <form method="post" class="form-container" asp-controller="Asset" asp-action="SignUp">
                    <!-- FullName Input -->
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="FullName">Họ và tên</label>
                        <input type="text" class="form-control" id="FullName" placeholder="Họ và tên" name="FullName">
                    </div>
                    <!-- Email Input -->
                    <div class="form-group">
                        <label asp-for="Email">Địa chỉ Email</label>
                        <input type="email" class="form-control" id="Email" placeholder="Địa chỉ Email" name="Email">
                    </div>
                    <!-- UserName Input -->
                    <div class="form-group">
                        <label asp-for="UserName">Tên đăng nhập</label>
                        <input type="text" class="form-control" id="UserName" placeholder="Tên đăng nhập" name="UserName">
                    </div>
                    <!-- Password Input -->
                    <div class="form-group">
                        <label asp-for="Password">Mật khẩu</label>
                        <input type="password" class="form-control" id="Password" placeholder="Mật khẩu" name="Password">
                    </div>

                    <!-- Gender Input -->
                    <div class="form-group">
                        <label asp-for="Gender">Giới tính</label>
                        <select class="form-control " id="Gender" name="Gender" style="background-color:white">
                            <option value="1">Nam</option>
                            <option value="0">Nữ</option>

                        </select>
                    </div>
                    <!-- Submit Button -->
                    <button type="submit" class="btn btn-primary btn-block">Đăng ký</button>
                    <!-- Login Link -->
                    <div class="text-center mt-3">
                        Đã có tài khoản? <a asp-controller="Asset" asp-action="Login">Đăng nhập</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <!-- Bootstrap JS and jQuery -->
    <script src="/js/jquery-3.5.1.slim.min.js"></script>
    <script src="/js/popper.min.js"></script>
    <script src="/js/bootstrap.min.js"></script>
</body>
</html>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}