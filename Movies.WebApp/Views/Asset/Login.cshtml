<!DOCTYPE html>
<html lang="en">
<head>
   
    @* <link href="/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet"> *@
    <style>
        body, html {
            height: 100%;
            margin: 0;
            background-image: url('https://wallpapers.com/images/hd/movie-poster-background-tvke0r6ko2jpix0j.jpg'); /* Thay đổi với đường dẫn của hình ảnh của bạn */
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            font-family: 'Poppins', sans-serif;
        }

        .form-container {
            background: rgba(0, 0, 0, 0.7);
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            margin-top: 100px;
            color: #fff;
        }

        .input-group-text svg {
            fill: #fff;
        }

        .form-text a {
            color: #ffc107;
        }

            .form-text a:hover {
                color: #ffeb3b;
            }

        .btn-primary {
            background-color: hsl(57.04deg 97.38% 44.9%);
            border-color: hsl(57.04deg 97.38% 44.9%);
        }

       
        .form-group {
            width: 100%;
        }

        
        .btn-block {
            display: block;
            width: 50%; 
            margin: 0 auto;
        }

       
        .form-control {
            height: 50px; 
        }
    </style>
</head>
<body>
    <div class="container mt-5 mb-5">
        <div class="row justify-content-center">
            <div class="col-12 col-md-8 col-lg-6">
                <form asp-action="Login" method="post" class="form-container">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label for="userName">Tên Đăng Nhập</label>
                        <div class="input-group">
                         @*    <div class="input-group-prepend">
                                <span class="input-group-text">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24">
                                        <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-3 16c0-1.58 3-2.45 4.5-2.45.15 0 .3.02.45.05 1.5.28 3.05.89 4.5 2.4-1.4-.72-2.97-1.07-4.5-1.1-1.53-.03-3.1.4-4.5 1.1zm5.97-3.97c-1.22-.21-2.45-.23-3.67 0-.14.02-.3.03-.44.05C9.54 14.65 8.3 15.45 8 16H6c0-1.74 1.79-3.44 4.5-3.44.61 0 1.22.13 1.77.36.04.02.1.03.14.05zm1.53-1.48c.13-.02.27-.03.4-.05 1.22-.23 2.46-.21 3.68 0 .05.02.1.03.16.05.71.14 1.38.33 2 .55-.62-.63-1.32-1.2-2-1.71-.1-.08-.22-.14-.32-.21-1.44-.92-2.98-1.38-4.52-1.38C6.79 9 6 10.79 6 13h2c0-2.21 1.79-4 4-4 .7 0 1.37.16 2 .45z" />
                                    </svg>
                                </span>
                            </div> *@
                            <input type="text" class="form-control" id="userName" placeholder="Tên Đăng Nhập" name="userName">
                            <span class="text-danger">@* Validation message here *@</span>
                        </div>
                    </div>
                    <!-- Password Input -->
                    <div class="form-group">
                        <label for="password">Mật khẩu</label>
                        <div class="input-group">
                           @*  <div class="input-group-prepend">
                                <span class="input-group-text">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24">
                                        <path d="M20 12c0-1.103-.897-2-2-2h-1V7c0-2.757-2.243-5-5-5S7 4.243 7 7v3H6c-1.103 0-2 .897-2 2v8c0 1.103.897 2 2 2h12c1.103 0 2-.897 2-2v-8zM9 7c0-1.654 1.346-3 3-3s3 1.346 3 3v3H9V7z"></path>
                                    </svg>
                                </span>
                            </div> *@
                            <input type="password" class="form-control" id="password" placeholder="Mật khẩu" name="password">
                            <span class="text-danger">@* Validation message here *@</span>
                        
                        </div>
                        
                        <small id="passwordHelp" class="form-text text-muted">
                            <a href="/quen-mat-khau">Quên mật khẩu?</a>
                        </small>
                    </div>
                    <!-- Submit Button -->
                    <button type="submit" class="btn btn-primary btn-block">Đăng nhập</button>
                    <!-- Register Link -->
                    <div class="text-center mt-3">
                        
                        Chưa có tài khoản? <a  asp-controller="Asset" asp-action="SignUp">Đăng kí</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
   
    

    <!-- Bootstrap JS and jQuery -->
  @*   <script src="/js/jquery-3.5.1.slim.min.js"></script>
    <script src="/lib/jquery/dist/jquery.min.js"></script>
    <script src="/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script> *@
</body>
</html>

